<%= form_for @experience, :html => { :class => "form-horizontal experience" } do |f| %>

  <% if @experience.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@experience.errors.count, "error") %> prohibited this experience from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @experience.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :tags, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tags, :class => 'form-control', "data-role" => "tagsinput", value: "" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :insurance_provider, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :insurance_provider, :class => 'form-control' %>
    </div>
    <%=f.error_span(:insurance_provider) %>
  </div>

  <div class="form-group">
    <%= f.label :anonymous, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :anonymous, :class => 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Share experience", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
